@model IEnumerable<Eads.Web.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="row">
    
    @foreach (var item in Model)
    {

        <div class="col-sm-6 col-md-4">
            <div class="thumbnail">

                @if (item.Image == null)
                {

                }
                else
                {
                    <img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" style="width: 283px;height: 218px;"/>
                }

                @*<img src="data:image;base64,@System.Convert.ToBase64String(item.Image)" style="width: 283px;height: 218px;" />*@

                <div class="caption">
                    <h3> @Html.DisplayFor(modelItem => item.ProductName)</h3>
                    <h6>@Html.DisplayFor(modelItem => item.Description)</h6>
                    <p> @Html.DisplayFor(modelItem => item.UnitPrice)</p>
                    <h6> @Html.DisplayFor(modelItem => item.Seller)</h6>
                    <h6> @Html.DisplayFor(modelItem => item.Date)</h6>
                    <h6> @Html.DisplayFor(modelItem => item.Category.CategoryName)</h6>
                    <h6> @Html.DisplayFor(modelItem => item.Subcategory.SubcategoryName)</h6>
                    <p>
                        <a asp-action="Edit" asp-route-id="@item.ProductID">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.ProductID">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.ProductID">Delete</a>
                    </p>
                </div>
            </div>
        </div>
    }
</div>

